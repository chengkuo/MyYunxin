<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_liao_tian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cheng.myyunxin.LiaoTianActivity">


    <TextView
        android:text="欢迎来到聊天界面"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="24dp"
        android:id="@+id/textView" />

    <Button
        android:text="发送文本消息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="30dp"
        android:id="@+id/button" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_content"
        android:layout_toRightOf="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:hint="输入聊天内容"/>

    <Button
        android:text="退出登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/but_tuichu" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_mubiaoID"
        android:hint="在此输入目标ID"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"/>

    <TextView
        android:text="此处为收到的消息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/but_tuichu"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="127dp"
        android:id="@+id/tv_shou" />

</RelativeLayout>
